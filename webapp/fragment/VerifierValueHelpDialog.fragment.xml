<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog noDataText="No Data Found" title="Select Verifier" search=".handleSearchVerifier" confirm=".handleConfirmVerifier"
		cancel=".handleCloseVerifier" items="{ path : 'AppModel>/Verifier', sorter : { path : 'STAFF_NUSNET_ID', descending : true } }">
		<ColumnListItem vAlign="Middle">
			<cells>
				<ObjectIdentifier title="{AppModel>STAFF_ID}" text="{AppModel>FULL_NM}"/>
				<Text text="{AppModel>STAFF_NUSNET_ID}"/>
				<ObjectIdentifier title="{AppModel>ULU}" text="{AppModel>ULU_T}"/>
				<ObjectIdentifier title="{AppModel>FDLU}" text="{AppModel>FDLU_T}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="Staff ID / Full Name"/>
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Nusnet ID"/>
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<header>
					<Text text="ULU"/>
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<header>
					<Text text="FDLU"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>